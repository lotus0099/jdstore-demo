<%= simple_form_for [:admin, @product] do |f| %>
  <div class="form-product">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Category") %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.input :image, as: :file, label: "详情图" %>



  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
<% end %>
